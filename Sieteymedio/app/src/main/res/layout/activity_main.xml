<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242729"
    tools:context="com.example.diego.sieteymedio.MainActivity">

    <Button
        android:id="@+id/continuar"
        android:layout_width="370dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fondoboton"
        android:text="@string/comenzar"
        android:textSize="30dp" />

    <Button
        android:id="@+id/opciones"
        android:layout_width="370dp"
        android:layout_height="130dp"
        android:layout_alignEnd="@+id/continuar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/continuar"
        android:background="@drawable/fondoboton"
        android:text="@string/opciones"
        android:textSize="30dp" />


    <Button
        android:id="@+id/reglas"
        android:layout_width="370dp"
        android:layout_height="130dp"
        android:layout_alignEnd="@+id/opciones"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opciones"
        android:background="@drawable/fondoboton"
        android:text="@string/reglas"
        android:textSize="30dp" />

    <Button
        android:id="@+id/tipodebaraja"
        android:layout_width="370dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reglas"
        android:background="@drawable/fondoboton"
        android:text="@string/tipodebaraja"
        android:textSize="30dp" />

</RelativeLayout>

